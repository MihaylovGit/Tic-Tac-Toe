<Window x:Class="Tic_Tac_Toe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tic_Tac_Toe"
        mc:Ignorable="d"
        Title="Tic-Tac-Toe" Height="850" Width="1654"
        FontFamily="Segoe UI Light"
        Background="{StaticResource BackgroundColor}">
    <Grid Margin="0,-218,-564,-294" HorizontalAlignment="Right" Width="1787">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="413*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="411*"/>
            <ColumnDefinition Width="378*"/>
            <ColumnDefinition Width="346*"/>
            <ColumnDefinition Width="239*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="TurnPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Left" Margin="102,0,0,347" Grid.RowSpan="2" Grid.Column="3" Width="227">
            <TextBlock FontSize="54"
                       Text="Player:"
                       Margin="0,0,0,15"/>
            <Image x:Name="PlayerImage"
                   Source="Assets/X15.png"
                   Height="75"/>
        </StackPanel>
        <Grid x:Name="GameCanvas"
            Grid.Row="1" Grid.ColumnSpan="3" Margin="65,67,143,67" Grid.Column="3">

            <Grid x:Name="GameGrid"
                MouseDown="GameGrid_MouseDown" Margin="0,330,627,512" RenderTransformOrigin="0.503,0.534">
                <Grid.Background>
                    <ImageBrush ImageSource="Assets/Grid.png"/>
                </Grid.Background>
            </Grid>

            <Line x:Name="Line"
                Stroke="{StaticResource LineColor}"
                StrokeThickness="10"
                StrokeStartLineCap="Round"
                StrokeEndLineCap="Round"
                Visibility="Hidden" Margin="0,0,922,807"/>
        </Grid>

        <Grid x:Name="EndScreen"
              Grid.RowSpan="2"
              Background="{StaticResource BackgroundColor}" Grid.ColumnSpan="2"
              Visibility="Hidden">
            <StackPanel Orientation="Vertical"
                        VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <TextBlock x:Name="ResultText"
                               FontSize="54"
                               Text="Winner: "
                               Margin="0,0,0,15"/>
                    <Image x:Name="WinnerImage"
                           Height="75"
                           Source="/Assets/X15.png"/>
                </StackPanel>
                <Button Content="Play Again"
                        Background="{StaticResource ButtonColor}"
                        FontSize="34"
                        Width="200"
                        Margin="0,20,0,0"
                        Padding="0,0,0,5"
                        BorderBrush="Black"
                        Click="Button_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
